@model IEnumerable<Rent_A_Car.Models.VoertuigRegistratie>
    <head>
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/css/lightbox.css" />
        <link rel="stylesheet" href="~/css/font-awesome.css" />


    </head>
    <body>
     
        <div class="loginPage1">
            <div class="wittevak1">
                <div class="loginLogo">
                    <img id="loginLogo2" src="~/lib/Images/carpng1.png" />
                    <div id="factuurtitle">Factuur</div>
                </div>

                <div class="card-header">
                    <strong>
                        Datum
                    </strong>
                    @foreach (var item in Model)
                    {
                        @Html.DisplayFor(modelItem => item.BeginDatum)
                    }



                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-sm-6">
                            <h6 class="mb-3">From:</h6>
                            <div>
                                <strong>Camper- en Caravanstalling Bentelo</strong>
                            </div>
                            <div><br /> Grondhuttenweg 2 </div>
                            <div>  Bentelo(Overijssel)</div>
                            <div>Email:  cvanderstal@gmail.com</div>
                            <div>Phone: 06-01928374</div>
                        </div>
                        <h6 id="To">To: </h6>
                        <div id="stukjeklant" class="col-sm-6">


                            <table class="table" id="vehicleIndexTable">
                                <thead>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>
                                                <strong> Customer @Html.DisplayFor(modelItem => item.ApplicationUser.FullName)</strong>
                                            </th>
                                            <th></th>

                                        </tr>
                                    }
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                Sneliusstraat 23<br />
                                                Enschede(Overijssel)<br />

                                                Email:   @User.Identity.Name)<br />
                                                Phone:   0621382475<br />
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>




                        <div id="stukje2">
                            <table class="table table-striped">
                                <thead>


                                    <tr>
                                        <th class="center">#</th>
                                        <th>Auto Merk</th>
                                        <th>Description</th>

                                        <th class="right">Dag Prijs</th>
                                        <th class="center">Auto Type</th>
                                        <th class="right">Totale Kosten</th>
                                    </tr>

                                </thead>

                                <tbody>

                                    @foreach (var item in Model)
                                    {

                                        <tr>

                                            <td class="center">1</td>
                                            <td class="left strong"> @Html.DisplayFor(modelItem => item.Merk)</td>
                                            <td class="left"> je betaalt @Html.DisplayFor(modelItem => item.Dagprijs) euro per dag </td>

                                            <td id="Getal1" class="right"> @Html.DisplayFor(modelItem => item.Dagprijs)</td>

                                            <td id="Getal2" class="center"> @Html.DisplayFor(modelItem => item.Type)</td>
                                            <td class="right">
                                                <label for="result"></label>

                                                @Html.DisplayFor(modelItem => item.TotalePrijs)
                                            </td>

                                        </tr>

                                    }
                                    <tr>
                                        <td class="center">.</td>
                                        <td class="left">.</td>
                                        <td class="left">.</td>

                                        <td class="right">.</td>
                                        <td class="center">.</td>
                                        <td class="right">.</td>
                                    </tr>
                                    <tr>
                                        <td class="center">.</td>
                                        <td class="left">.</td>
                                        <td class="left">.</td>

                                        <td class="right">.</td>
                                        <td class="center"></td>
                                        <td class="right"></td>
                                    </tr>
                                    <tr>
                                        <td class="center"></td>
                                        <td class="left"> </td>
                                        <td class="left"></td>

                                        <td class="right"></td>
                                        <td class="center"></td>
                                        <td class="right"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="row">

                            <div class="col-lg-4 col-sm-5">

                            </div>

                            <div id="stukje3" class="col-lg-4 col-sm-5 ml-auto">
                                <table class="table table-clear">

                                    @foreach (var item in Model)
                                    {
                                        <tbody>
                                            <tr>
                                                <td class="left">
                                                    <strong>Subtotal</strong>
                                                </td>

                                            </tr>

                                            <tr>
                                                <td class="left">
                                                    @Html.DisplayFor(modelItem => item.TotalePrijs)

                                                </td>
                                                <td class="right">

                                            </tr>

                                        </tbody>
                                    }
                                </table>

                                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                                    <ul class="nav navbar-nav">
                                        <li>
                                            <a id="vehicleRegisterLink" class="nav-link" asp-action="Index">Ga terug naar het lijst</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </body>